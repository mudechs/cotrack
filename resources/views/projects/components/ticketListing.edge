<div class="table-responsive">
  <table class="table table-hover table-sm table-borderless table-striped text-nowrap m-0 data-table linkable">
    <thead>
      <tr>
        <th>{{ priority }}</th>
        <th>Status</th>
        <th>{{ dateLabel }}</th>
        <th>{{ subject }}</th>
        <th>{{ from }} &rarr; {{ to }}</th>
      </tr>
    </thead>
    <tbody>
      @each(ticket in tickets)
        <tr data-route="{{ route('ticketsShow', { id: ticket.id }) }}">
          <td scope="row">
            <span class="badge badge-pill
              @each(priority in priorities)
              @if(priority.value == $parent.ticket.priority)
              badge-{{ priority.color }}
              @endif
              @endeach
            ">{{ ticket.priority }}</span>
          </td>
          <td>
            @each(status in statuses)
              @if(status.value == $parent.ticket.status)
                {{ status.label }}
              @endif
            @endeach
          </td>
          <td>{{ ticket.updated_at }}</td>
          <td>{{ ticket.subject }}</td>
          <td>
            {{ ticket.ticketAuthor.first_name }} {{ ticket.ticketAuthor.last_name }} &rarr;
            @if(ticket.ticketRecipient)
              {{ ticket.ticketRecipient.first_name }} {{ ticket.ticketRecipient.last_name }}
            @else
              nicht zugewiesen
            @endif
          </td>
        </tr>
      @endeach
    </tbody>
  </table>
</div>